
<% include ../partials/_navbar.ejs %>
	<h1> Edit Picture </h1>
	</header>
	<main>
		<section>
			<img src="<%= photo.img %>">
		</section>
		<section>
			<h4> How Would You Like To Edit This Image? </h4>
			<form method="post" action="/photos/<%=photo._id%>?_method=PUT">	
				<select name="userId">
					<% for(let i =0; i<users.length; i++){ %>
						<option 
							value="<%=users[i]._id%>"
							<% if(users[i]._id.toString() === photosUser._id.toString()){%>
								selected
							<%}%>
						> 
						<%=users[i].name %> 
						</option>
					<%}%>
				</select><br/>
				<input type="text" name="title" placeholder="title"/>
				<input type="submit" value="Edit Photograph">
			</form>
			<form method="POST" action="/photos/<%=photo.id%>?_method=DELETE">
				<button type="submit" value="Delete Photo" name="delete"> delete </button>
			</form>
		</section>
	</main> 
