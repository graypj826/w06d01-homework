
<% include ../partials/_navbar.ejs %>
	<h1> Edit Picture </h1>
	</header>
	<main>
		<section>
			<img src="<%= photo.img %>">
		</section>
		<section>
			<h4> How Would You Like To Edit This Image? </h4>
			<form method="post" action="/photos">	
				<select name="userId">
					<% for(let i =0; i<allUsers.length; i++){ %>
						<option value="<%=allUsers[i].id%>"> <%=allUsers[i].name %> </option>
					<%}%>
				</select>
				<input type="text" name="title" placeholder="title"/>
				<input type="text" name="img" placeholder="image address"/>
				<input type="submit" value="Add Photograph">
			</form>
			<form method="POST" action="/photos/<%=photo.id%>?_method=DELETE">
				<button type="submit" value="Delete Photo" name="delete"> delete </button>
			</form>
		</section>
	</main> 
